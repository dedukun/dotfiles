profile {
    output eDP-1
    exec hyprctl keyword workspace 1, monitor:eDP-1, default:true
    exec hyprctl keyword workspace 2, monitor:eDP-1
    exec hyprctl keyword workspace 3, monitor:eDP-1
    exec hyprctl keyword workspace 4, monitor:eDP-1
    exec hyprctl keyword workspace 5, monitor:eDP-1
    exec hyprctl keyword workspace 6, monitor:eDP-1
    exec hyprctl keyword workspace 7, monitor:eDP-1
    exec hyprctl keyword workspace 8, monitor:eDP-1
    exec hyprctl keyword workspace 9, monitor:eDP-1
    exec hyprctl keyword workspace 10, monitor:eDP-1
    exec systemctl --user restart hyprpaper
    exec notify-send "Switching to Only Internal Display" -u normal
}

profile {
    output eDP-1
    output HDMI-A-1
    exec hyprctl keyword workspace 1, monitor:eDP-1, default:true
    exec hyprctl keyword workspace 2, monitor:eDP-1
    exec hyprctl keyword workspace 3, monitor:eDP-1
    exec hyprctl keyword workspace 4, monitor:eDP-1
    exec hyprctl keyword workspace 5, monitor:HDMI-A-1, default:true
    exec hyprctl keyword workspace 6, monitor:HDMI-A-1
    exec hyprctl keyword workspace 7, monitor:HDMI-A-1
    exec hyprctl keyword workspace 8, monitor:HDMI-A-1
    exec hyprctl keyword workspace 9, monitor:HDMI-A-1
    exec hyprctl keyword workspace 10, monitor:HDMI-A-1
    exec systemctl --user restart hyprpaper
    exec notify-send "Switching to HDMI External Display" -u normal
}

profile {
    output eDP-1
    output DP-1
    exec hyprctl keyword workspace 1, monitor:eDP-1, default:true
    exec hyprctl keyword workspace 2, monitor:eDP-1
    exec hyprctl keyword workspace 3, monitor:eDP-1
    exec hyprctl keyword workspace 4, monitor:eDP-1
    exec hyprctl keyword workspace 5, monitor:DP-1, default:true
    exec hyprctl keyword workspace 6, monitor:DP-1
    exec hyprctl keyword workspace 7, monitor:DP-1
    exec hyprctl keyword workspace 8, monitor:DP-1
    exec hyprctl keyword workspace 9, monitor:DP-1
    exec hyprctl keyword workspace 10, monitor:DP-1
    exec systemctl --user restart hyprpaper
    exec notify-send "Switching to DP External Display" -u normal
}

profile {
    output eDP-1
    output HDMI-A-1
    output DP-1
    exec hyprctl keyword workspace 1, monitor:eDP-1, default:true
    exec hyprctl keyword workspace 2, monitor:eDP-1
    exec hyprctl keyword workspace 3, monitor:eDP-1
    exec hyprctl keyword workspace 4, monitor:HDMI-A-1, default:true
    exec hyprctl keyword workspace 5, monitor:HDMI-A-1
    exec hyprctl keyword workspace 6, monitor:HDMI-A-1
    exec hyprctl keyword workspace 7, monitor:DP-1, default:true
    exec hyprctl keyword workspace 8, monitor:DP-1
    exec hyprctl keyword workspace 9, monitor:DP-1
    exec hyprctl keyword workspace 10, monitor:DP-1
    exec systemctl --user restart hyprpaper
    exec notify-send "Switching to Two External Displays" -u normal
}

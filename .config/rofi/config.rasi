configuration{
    modi: "run,drun";
    icon-theme: "Oranchelo";
    show-icons: true;
    terminal: "kitty";
    drun-display-format: "{icon} {name}";
    disable-history: false;
    display-drun: "   Apps ";
    display-run: "   Run ";
    sidebar-mode: true;
}

@theme "catppuccin-mocha"

* {
    width: 800px;
    border-col: @fg-col;
}

window {
    height: 0px;
    border: 2px;
    border-radius: 5px;
}

listview {
    fixed-height: 0;
    lines:  10;
    columns: 3;
}
